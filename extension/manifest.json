{
  "manifest_version": 3,
  "name": "pw-rs Bridge",
  "description": "Rust-based Playwright CDP bridge for pw-cli",
  "version": "0.0.6",
  "background": {
    "service_worker": "dist/init.js",
    "type": "module"
  },
  "permissions": [
    "debugger",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "action": {
    "default_title": "pw-rs bridge",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["dist/background_bg.wasm"],
      "matches": ["<all_urls>"]
    }
  ]
}
